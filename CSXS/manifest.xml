<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="8.0" ExtensionBundleId="com.gishant.videoautomationhub" ExtensionBundleVersion="1.0.0" ExtensionBundleName="ECCouncil Plugin" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <ExtensionList>
        <Extension Id="com.gishant.videoautomationhub.panel" Version="1.0.0" />
    </ExtensionList>
    <ExecutionEnvironment>
        <HostList>
            <Host Name="PPRO" Version="[24.0,99.9]" />
        </HostList>
        <LocaleList>
            <Locale Code="All" />
        </LocaleList>
        <RequiredRuntimeList>
            <RequiredRuntime Name="CSXS" Version="11.0" />
        </RequiredRuntimeList>
    </ExecutionEnvironment>
    <DispatchInfoList>
        <Extension Id="com.gishant.videoautomationhub.panel">
            <DispatchInfo>
                <Resources>
                    <MainPath>./index.html</MainPath>
                    <ScriptPath>./host/premiere.jsx</ScriptPath>
                    <CEFCommandLine>
                        <Parameter>--enable-nodejs</Parameter>
                        <Parameter>--mixed-context</Parameter>
                        <Parameter>--enable-logging</Parameter>
                        <Parameter>--v=1</Parameter>
                    </CEFCommandLine>
                </Resources>
                <Lifecycle>
                    <AutoVisible>true</AutoVisible>
                    <StartOnEvents>
                        <Event>applicationActivate</Event>
                    </StartOnEvents>
                </Lifecycle>
                <UI>
                    <Type>Panel</Type>
                    <Menu>ECCouncil Plugin</Menu>
                    <Geometry>
                        <Size>
                            <Height>350</Height>
                            <Width>300</Width>
                        </Size>
                        </Geometry>
                    <Icons>
                        <Icon Type="Normal">./icons/icon_dark_panel.png</Icon>
                        <Icon Type="RollOver">./icons/icon_dark_panel.png</Icon>
                        <Icon Type="Disabled">./icons/icon_dark_panel.png</Icon> <Icon Type="DarkNormal">./icons/icon_light_panel.png</Icon>
                        <Icon Type="DarkRollOver">./icons/icon_light_panel.png</Icon>
                        <Icon Type="DarkDisabled">./icons/icon_light_panel.png</Icon> </Icons>
                </UI>
            </DispatchInfo>
        </Extension>
    </DispatchInfoList>
</ExtensionManifest>
